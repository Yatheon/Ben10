

    //Testprogram för sensorn
void main(){
    SetSensorUltrasonic(IN_3);
    while(true){
        //the ultrasonic sensor needs time to read the values
        //that is why we have the 500 millisecond wait
        Wait(500);
        ClearScreen();
        NumOut(0, 0, SensorUS(IN_3));

        if(SensorUS(IN_3) < 50){
            Off(OUT_AC);
        }
        else {
            OnFwd(OUT_AC, 100);
        }
    }
}

