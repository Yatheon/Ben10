#include "NXCDefs.h"
#define NEAR 30 //cm
task main(){
 SetSensorLowspeed(IN_4);
 while(true){
 OnFwd(OUT_AC,50);
 while(SensorUS(IN_4)>NEAR);
 Off(OUT_AC);
 OnRev(OUT_C,100);
 Wait(800);
 }
}

