//Testprogram till ultrasonic sensorn
task main(){
    SetSensorUltrasonic(IN_4);
    while(true){
    
        Wait(500);
        ClearScreen();
        NumOut(0, 0, SensorUS(IN_4));

        if(SensorUS(IN_4) < 50){
            Off(OUT_AC);
        }
        else {
            OnFwd(OUT_AC, 100);
        }
    }
}


